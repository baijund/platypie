<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/background_fire"
    tools:context=".presenters.LoggedInActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/recommendationButton"
        android:layout_alignStart="@+id/recommendationButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:id="@+id/profileButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/logout"
        android:layout_alignEnd="@+id/logout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:id="@+id/searchButton"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/profileButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/adminProfileButton"
        android:layout_alignEnd="@+id/adminProfileButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Releases"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:id="@+id/releasesButton"
        android:layout_alignTop="@+id/searchButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/recommendationButton"
        android:layout_alignStart="@+id/recommendationButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New DVDs"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:id="@+id/dvdButton"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/releasesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:id="@+id/recommendationButton"
        android:layout_alignTop="@+id/dvdButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Changes"
        android:textColor="#9e2a00"
        android:background="#ffffff"
        android:typeface="monospace"
        android:id="@+id/adminProfileButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
